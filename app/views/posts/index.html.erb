<h1>Hello from index</h1>
<%= notice %><br>
<p><%= link_to "Create a New Post", new_post_path %></p>

<%= @posts.each do |post| %>
  <p>
    <label>ID: </label>
      <%= post.id %>
  </p>
  <p>
    <label>Title: </label>
      <%= post.title %>
  </p>
  <p>
    <label>Post Body: </label>
      <%= post.body %>
  </p>
  <p><%= link_to "Show Post", post_path(post) %></p>
  <p><%= link_to "Edit Post", edit_post_path(post) %></p>
  <p><%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>